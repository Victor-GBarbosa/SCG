{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build-scg",
      "command": "gcc",
      "args": [
        "-g",
        "-o",
        "scg.exe",
        "main.c",
        "gameFeatures.c",
        "deckManager.c",
        "pokerHands.c"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "type": "shell",
      "label": "build-and-run-tests",
      "command": "gcc",
      "args": [
        "-g",
        "-o",
        "tests.exe",
        "deckManager.c",
        "pokerHands.c",
        "tests.c",
        "-DRUN_TESTS"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
